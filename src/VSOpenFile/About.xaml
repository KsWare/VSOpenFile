<Window 
	x:Class="KsWare.VSOpenFile.About"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:KsWare.VSOpenFile"
	mc:Ignorable="d"
	Title="About"
	Height="221"
	Width="431"
	WindowStyle="ToolWindow"
	SizeToContent="Height">
    <StackPanel Margin="20">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
		    <TextBlock Text="VSOpenFile" FontSize="16" FontWeight="Bold" />
			<TextBlock Text="v1.0" VerticalAlignment="Bottom" Margin="4 0 0 0"/>
		</StackPanel>
	    <TextBlock Text="Copyright © 2021 by KsWare. All rights reserved." HorizontalAlignment="Center" Margin="0 5 0 0"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
			<TextBlock Text="Homepage: "/>
			<Button Style="{StaticResource LinkButton}" Content="github.com/KsWare/VSOpenFile" Click="OpenHomepage_Click"></Button>
		</StackPanel>
    </StackPanel>
</Window>
